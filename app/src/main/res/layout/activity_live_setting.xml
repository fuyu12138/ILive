<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.graduation.fuyu.ilive.LiveSettingActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/colorAccent"
            />
        <android.support.v7.widget.Toolbar
            android:id="@+id/activity_live_setting_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            app:navigationIcon="@drawable/ic_arrow_back_white_24dp"
            app:title="直播间设置"
            android:theme="@style/AppTheme.TransparentStatusBar"
            app:titleTextColor="@color/colorWhite">
        </android.support.v7.widget.Toolbar>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/colorWhite"
            android:orientation="horizontal">
            <com.graduation.fuyu.ilive.widget.CircleImageView
                android:id="@+id/activity_live_setting_iv_head"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:src="@mipmap/ic_launcher_round"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/activity_live_setting_tv_room_owner"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:maxEms="6"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorBlack"
                    android:textSize="24sp"/>
                <TextView
                    android:id="@+id/activity_live_setting_tv_room_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:maxEms="6"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorGrey666666"
                    android:textSize="16sp"/>
            </LinearLayout>
        </LinearLayout>
        <com.graduation.fuyu.ilive.widget.BarArrow
            android:id="@+id/activity_live_setting_my_picture"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:layout_marginTop="50dp"/>
        <com.graduation.fuyu.ilive.widget.BarArrow
            android:id="@+id/activity_live_setting_room_name"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:layout_marginTop="2dp"/>
        <com.graduation.fuyu.ilive.widget.BarArrow
        android:id="@+id/activity_live_setting_room_label"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"/>
        <com.graduation.fuyu.ilive.widget.BarArrow
            android:id="@+id/activity_live_setting_room_describe"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:layout_marginTop="2dp"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
