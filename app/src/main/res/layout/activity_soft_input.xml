<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.graduation.fuyu.ilive.SoftInputActivity">
        <RelativeLayout
            android:id="@+id/activity_soft_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:layout_alignParentBottom="true">
                <EditText
                    android:id="@+id/activity_soft_et"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:imeOptions="actionSend"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:maxLength="20"
                    android:hint="@string/input_danmaku"/>
                <ImageView
                    android:id="@+id/activity_soft_send"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_send_grey_24dp"
                    />
            </LinearLayout>
        </RelativeLayout>
</android.support.constraint.ConstraintLayout>
