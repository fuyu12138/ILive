<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:gravity="center">-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp">
            <LinearLayout
                android:id="@+id/item_label_ll"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_label_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="英雄联盟"
                    android:maxLines="1"
                    android:maxLength="8"
                    android:textSize="16sp"
                    android:background="@drawable/shape_label_selector"/>
                <View
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/item_label_iv_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/item_label_ll"
                android:layout_alignTop="@+id/item_label_ll"
                android:src="@drawable/ic_do_not_disturb_alt_black_24dp"/>
        </RelativeLayout>
    <!--</LinearLayout>-->



</android.support.constraint.ConstraintLayout>